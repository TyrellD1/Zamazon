<%- include('../partials/head') %>
<body>
    <%- include('../partials/nav') %> 
    <%- include('../partials/categoryBar') %>
    <div class="d-flex flex-column bodyContainer">
        <div class="flex column main__centerColumn_all"> 
            <div class="flex column formContainer_all mx-4">
                <form class="needs-validation flex column" action="/product/<%= product._id %>/update?_method=PUT" method="POST" novalidate>
                        <div class="input-group mt-3">
                            <span class="input-group-text">Image</span>
                            <input class="form-control" value="" type="text" maxlength="700" 
                            name="productImg" id="productImg" placeholder="productImg(img)">
                        </div>
                        <div class="input-group mt-3">
                            <span class="input-group-text">Name</span>
                            <input class="form-control" value="<%= product.productName %> " type="text" maxlength="36" 
                            name="productName" id="productName" placeholder="Atomic Habits" required>
                        </div>
                        <div class="input-group mt-3">
                            <span class="input-group-text">Description</span>
                            <input class="form-control" value="<%= product.productDescription %>" type="text" maxlength="600" 
                            name="productDescription" id="productDescription" placeholder="What a great book" required>
                        </div>
                        <div class="input-group mt-3">
                            <span class="input-group-text">Price $</span>
                            <input class="form-control" value="<%= product.productPrice %>" type="text" maxlength="36" 
                            name="productPrice" id="productPrice" placeholder="12.72" required>
                        </div>
                        <button class="btn btn-warning mt-3 postButton">Update Product</button>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include('../partials/validator') %>
</html>

