<%- include('../partials/head') %>
<body>
    <%- include('../partials/nav') %> 
    <%- include('../partials/categoryBar') %>
    <div class="d-flex flex-column bodyContainer">
        <div class="d-flex flex-row updateContainer mx-auto">
            <div class="d-flex flex-column categoryContainer mt-2">
                <img class="categoryContainer__img" 
                src="<%= category.categoryImg %> " alt="">
                <h2 class="categoryContainer__title mx-4 mt-2 text-break"><%= category.categoryName %> </h2>
                <p class="categoryContainer__description mx-4 text-break"><%= category.categoryDescription %> </p>
            </div>
            <div class="d-flex flex-column formContainer_all ms-4">
                <form class="needs-validation d-flex flex-column" action="/category/<%= category._id %>/update?_method=PUT" method="POST" novalidate>
                        <div class="input-group mt-3">
                            <span class="input-group-text">Image</span>
                            <input class="form-control" value="<%= category.categoryImg %>" type="text" maxlength="700" name="categoryImg" id="categoryImg" placeholder="categoryImg(img)" required>
                        </div>
                        <div class="input-group mt-3">
                            <span class="input-group-text">Name</span>
                            <input class="form-control" value="<%= category.categoryName %>" type="text" maxlength="36" name="categoryName" id="categoryName" placeholder="Books" required>
                        </div>
                        <div class="input-group mt-3">
                            <span class="input-group-text">Description</span>
                            <input class="form-control" value="<%= category.categoryDescription %>" type="text" maxlength="36" name="categoryDescription" id="categoryDescription" placeholder="Books" required>
                        </div>
                        <div class="d-flex flex-row mt-3">
                            <button class="btn btn-warning my-auto updateButton postButton">Update Category</button>
                            <a class="btn btn-primary ms-2 my-auto" href="/category/<%= category._id %> ">Return To Category</a>
                        </div>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include('../partials/validator') %>
</html>